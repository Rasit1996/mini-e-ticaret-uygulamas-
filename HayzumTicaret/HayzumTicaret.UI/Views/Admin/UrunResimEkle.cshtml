
@{
    ViewBag.Title = "Ürün Resim Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div  style="background-color:antiquewhite"  >
    <form action="/Admin/UrunResimEkle"  method="post" enctype="multipart/form-data">
        <input type="hidden" name="uID" value="@Model"/>
        <div class="form-group">
            <label class="control-label col-md-3">Resim Ekle</label>
            <div class="controls col-md-9">
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <span class="btn btn-white btn-file">
                        <span class="fileupload-new"><i class="fa fa-paper-clip"></i> Dosya Seç</span>
                        <span class="fileupload-exists"><i class="fa fa-undo"></i>Değiştir</span>
                        <input type="file" name="fileUpload" class="default" />
                    </span>
                    <span class="fileupload-preview" style="margin-left:5px;"></span>
                    <a href="advanced_form_components.html#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
                </div>
            </div>
        </div>
        <div  style="margin-left:465px">
            <div class="col-lg-offset-2 col-lg-10"></div>
            <input type="submit" class="btn btn-success" value="Kaydet" />
            <a class="btn btn-danger" href="/Admin/Urun">İptal</a>
        </div>
       
    </form>

</div>


