
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using HayzumTicaret.UI.Models

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Ekleme Sayfası
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="commentForm" method="post"  action="/Admin/KategoriEkle">
                        <div class="form-group">
                            <label for="cname" class="control-label col-lg-2">Kategori Adı:</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="Adi" type="text" required placeholder="Ad..." />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Açıklama</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="Aciklama" required placeholder="Açıklama..." />
                            </div>
                        </div>
                        
                        
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Kaydet</button>
                                <a href="/Admin/Kategori" class="btn btn-default" type="button">İptal</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

