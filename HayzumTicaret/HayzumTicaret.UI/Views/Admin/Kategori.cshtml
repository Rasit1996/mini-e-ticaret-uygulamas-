
@{
    ViewBag.Title = "Kategori";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using HayzumTicaret.UI.Models
@model List<Kategori>


<section class="panel">
    <header class="panel-heading">
        Kategoriler Tablosu
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">

                    <a href="/Admin/KategoriEkle" class="btn btn-success">
                         Kategori Ekle <i class="icon-bar"></i>
                    </a>
                </div>

            </div>
            <br />
            <div class="space15"></div>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                       
                            <th>Düzenle</th>
                            <th>Sil</th>
                           
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Kategori ktg in Model)
                        {
                            <tr class="">
                                <td>@ktg.Adi</td>
                                <td>@ktg.Aciklama</td>
                                
                                
                                <td><a class="edit" href="/Admin/KategoriGüncelle/@ktg.id">Düzenle</a></td>
                                <td><a class="delete" href="/Admin/KategoriSil/@ktg.id">Sil</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

