
@{
    ViewBag.Title = "MarkaEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Ekleme Sayfası
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" enctype="multipart/form-data" id="commentForm" method="post" action="/Admin/MarkaEkle">
                        <div class="form-group">
                            <label for="cname" class="control-label col-lg-2">Marka Adı:</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="Adi" type="text" required placeholder="Ad giriniz..." />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Açıklama</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="Aciklama" required placeholder="Açıklama..." />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2">Resim Yükle</label>
                            <div class="col-md-4">
                                <input type="file" name="FileUpload"class="default" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Kaydet</button>
                                <a href="/Admin/Marka" class="btn btn-default" type="button">İptal</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

